# Base URL for the FastAPI gateway.
VITE_API_BASE_URL=http://localhost:8000

# Optional override for the live updates stream (SSE or WebSocket bridge).
# Provide a fully-qualified URL or a relative path such as "/stream".
# Leave blank to fall back to `${VITE_API_BASE_URL}/stream`.
VITE_UPDATES_URL=

# Optional LXMF server identity forwarded with each request.
VITE_SERVER_IDENTITY=
